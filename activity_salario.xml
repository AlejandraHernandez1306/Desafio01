<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promedio del Estudiante"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:textColor="#2E7D32" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del estudiante"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp" />

        <!-- Nota 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etNota1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nota 1 (0-10)"
                android:inputType="numberDecimal"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etPonderacion1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ponderación 1 (%)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Nota 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etNota2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nota 2 (0-10)"
                android:inputType="numberDecimal"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etPonderacion2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ponderación 2 (%)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Nota 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etNota3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nota 3 (0-10)"
                android:inputType="numberDecimal"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etPonderacion3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ponderación 3 (%)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Nota 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/etNota4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nota 4 (0-10)"
                android:inputType="numberDecimal"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etPonderacion4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ponderación 4 (%)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <!-- Nota 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/etNota5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nota 5 (0-10)"
                android:inputType="numberDecimal"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etPonderacion5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ponderación 5 (%)"
                android:inputType="numberDecimal" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Calcular Promedio"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:background="#F0F0F0"
            android:padding="15dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>