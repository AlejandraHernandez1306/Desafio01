<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloSalario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuentos al Salario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvInfoDescuentos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descuentos aplicados:\n• AFP: 7.25%\n• ISSS: 3%\n• Renta: Según tabla de tramos"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#E3F2FD"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTituloSalario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvNombreEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Empleado:"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/tvInfoDescuentos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/etNombreEmpleado"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Ingrese el nombre del empleado"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombreEmpleado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvSalarioBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salario Base:"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/etNombreEmpleado"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etSalarioBase"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSalarioBase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvTablaRenta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tabla de Renta:\n• $0.01 - $472.00: Exento\n• $472.01 - $895.24: 10% + $17.67\n• $895.25 - $2,038.10: 20% + $60.00\n• Más de $2,038.10: 30% + $288.57"
            android:textSize="12sp"
            android:textColor="#666666"
            android:background="#FFF3E0"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etSalarioBase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCalcularSalario"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Calcular Salario Neto"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvTablaRenta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tvResultadoSalario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:visibility="gone"
            android:fontFamily="monospace"
            app:layout_constraintTop_toBottomOf="@id/btnCalcularSalario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>