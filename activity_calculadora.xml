<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloCalculadora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora Básica"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FF9800"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvNumero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primer Número:"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/tvTituloCalculadora"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <EditText
            android:id="@+id/etNumero1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Ingrese el primer número"
            android:inputType="numberDecimal|numberSigned"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvNumero1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvNumero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segundo Número:"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/etNumero1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tvNotaRaiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(No necesario para raíz cuadrada)"
            android:textSize="12sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/etNumero1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/etNumero2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Ingrese el segundo número"
            android:inputType="numberDecimal|numberSigned"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvNumero2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvOperaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operaciones:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/etNumero2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Primera fila de botones -->
        <Button
            android:id="@+id/btnSuma"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="+ Suma"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvOperaciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnResta"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnResta"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="- Resta"
            android:textSize="16sp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/tvOperaciones"
            app:layout_constraintStart_toEndOf="@id/btnSuma"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" />

        <!-- Segunda fila de botones -->
        <Button
            android:id="@+id/btnMultiplicacion"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="× Multiplicar"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnSuma"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDivision"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="÷ Dividir"
            android:textSize="16sp"
            android:backgroundTint="#9C27B0"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnResta"
            app:layout_constraintStart_toEndOf="@id/btnMultiplicacion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp" />

        <!-- Tercera fila de botones -->
        <Button
            android:id="@+id/btnExponente"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="^ Exponente"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnMultiplicacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnRaizCuadrada"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnRaizCuadrada"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="√ Raíz Cuadrada"
            android:textSize="16sp"
            android:backgroundTint="#607D8B"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnDivision"
            app:layout_constraintStart_toEndOf="@id/btnExponente"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp" />

        <!-- Botón limpiar -->
        <Button
            android:id="@+id/btnLimpiar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="Limpiar"
            android:textSize="16sp"
            android:backgroundTint="#795548"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/btnExponente"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" />

        <!-- Resultado -->
        <TextView
            android:id="@+id/tvResultadoCalculadora"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/btnLimpiar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>